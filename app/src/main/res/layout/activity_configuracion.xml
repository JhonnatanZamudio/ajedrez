<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_fondo_configuracion"
    tools:context=".configuracion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="@string/msj3"
        android:textSize="20sp"
        android:fontFamily="@font/helveticaltstdroman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <Button
        android:id="@+id/btnCaso1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_semicurvo"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:text="@string/msj4"
        android:textColor="#428980"
        android:paddingLeft="15dp"
        android:paddingRight="40dp"
        android:textSize="25sp"
        android:fontFamily="@font/helveticaltstdbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:paddingStart="15dp"
        android:paddingEnd="40dp" />

    <Button
        android:id="@+id/btnCaso2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_semicurvo"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:text="@string/msj5"
        android:textColor="#428980"
        android:paddingLeft="15dp"
        android:paddingRight="40dp"
        android:textSize="25sp"
        android:fontFamily="@font/helveticaltstdbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53"
        android:paddingStart="15dp"
        android:paddingEnd="40dp"/>

    <Button
        android:id="@+id/btnCaso3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_semicurvo"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:text="@string/msj6"
        android:textColor="#428980"
        android:paddingLeft="15dp"
        android:paddingRight="40dp"
        android:textSize="25sp"
        android:fontFamily="@font/helveticaltstdbold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        android:paddingStart="15dp"
        android:paddingEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>